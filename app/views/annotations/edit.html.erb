<section id="main-content">
    <section class="wrapper">
        <div class="row" id="researchViewModel">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Research Request
                    </header>
                    <div class="panel-body">
                        <div class="row">
                            <%= form_for @annotation, url: annotation_url(@annotation) do |f|%>

                              <div class="col-lg-6">
                                  <div class="form-group prepend-icon">
                                      <label for="Item_Name">Item Name</label>
                                      <input  type="text" class="form-control" id="Item_Name" placeholder="Project Title" name="Item_Name" value="<%= @annotation.try(:Item_Name) %>" required="true">
                                      <span class="field-icon"><i class="icon-archive"></i></span>
                                  </div>
                                  <div class="form-group prepend-icon">
                                      <label for="Project_Select">Select Affiliates for Item</label>
                                      <select class="form-control" id="Project_Select" name="Project_Select">
                                          <option value="">Select Affilates</option>
                                          <%= options_for_select(@affilates.map { |affilate| [affilate[:title], affilate[:id]] }, @annotation.try(:id)) %>
                                      </select>
                                      <i class="arrow double"></i>    
                                      <span class="field-icon"><i class="icon-file"></i></span>
                                  </div>
                                  <div class="form-group prepend-icon">
                                      <label for="Item_Price">Item Price</label>
                                      <input type="integer" class="form-control" id="Item_Price" placeholder="Item Price" name="Item_Price" value="<%= @annotation.try(:Item_Price) %>">
                                      <span class="field-icon"><i class="icon-money"></i></span>
                                  </div>
                                  <div class="form-group prepend-icon">
                                      <label for="Merchant_Name">Merchant Name</label>
                                      <input type="text" class="form-control" id="Merchant_Name" placeholder="Merchant Name" name="Merchant_Name" value="<%= @annotation.try(:Merchant_Name) %>">
                                      <span class="field-icon"><i class="icon-user"></i></span>
                                  </div>
                                  <div class="form-group prepend-icon">
                                      <label for="Source">Source</label>
                                      <input type="text" class="form-control" id="Source" placeholder="Source" name="Source" value="<%= @annotation.try(:Source) %>">
                                      <span class="field-icon"><i class="icon-user"></i></span>
                                  </div>
                                  <div class="form-group prepend-icon">
                                      <label for="Note">Invoice</label>
                                      <input type="text" class="form-control" id="Note" placeholder="Note" name="Note" value="<%= @annotation.try(:Note) %>">
                                      <span class="field-icon"><i class="icon-user"></i></span>
                                  </div>
                                  <div class="form-group prepend-icon">
                                      <label for="Note">Date</label>
                                      <input type="date" 
                                             class="form-control" id="Order" placeholder="Date" name="date" 
                                             value="<%= @annotation.try(:created_at).strftime("%d/%m/%Y")%>">
                                      <span class="field-icon"><i class="icon-calendar"></i></span>
                                  </div>
                                  <div class="form-group">
                                      <input type="radio" name="date_status" value="order" > <label for="Note">Order On </label>
                                      <input type="radio" name="date_status" value="delivery" ><label for="Note">Delivery By</label>
                                      <input type="radio" name="date_status" value="perpetuity" ><label for="Note">In Perpetuity</label>
                                  </div>

                                  <div class="form-group">
                                      <button id="add" class="btn btn-shadow btn-primary" type="submit"> Submit </button>
                                  </div>
                              </div>
                            <% end %>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
<script src="/assets/researcher/requestByProjects.js"  type="text/javascript" /></script>
