<section id="main-content">
    <section class="wrapper">
        <div class="row" id="projectsViewModel">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        View Affiliates
                    </header>
                    <div class="panel-body">
                        <div class="adv-table">
                            <table cellpadding="0" cellspacing="0" border="0" 
                                   class="table table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th style="width: 35%">Affiliates Name</th>
                                        <th style="width: 20%">Affiliates User</th>
                                        <th style="width: 25%">Affiliates Duration</th>
                                        <th style="width: 10%; text-align: center;">Edit</th>
                                        <th style="width: 10%; text-align: center;">Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @project.each do |project| %>
                                    <tr >
                                        <!--<td><%#= project.title.titleize %></td>-->
                                        <td><%= project.title %> </td>

                                        <td><p><%= project&.authors&.last.first_name.capitalize + ' ' + project&.authors&.last.last_name.titleize if project.authors.present?%></p></td>
                                        
                                        <td><%= project.created_at.strftime("%d-%m-%Y") %></td>
                                        <td style="text-align: center;"><a href= "/edit_project/id*<%= project.id %>"   class="btn btn-success btn-xs">&puncsp;<i class="icon-info"></i>&puncsp;</a></td>
                                        <td  style="text-align: center;"><a href= "/researcher_detail/id*<%= project.id %>"  class="btn btn-info btn-xs">&puncsp;<i class="icon-info"></i>&puncsp;</a></td>
                                    </tr>
                                    <% end if @project.present? %>
                                </tbody>
                            </table>
                            <div class="digg_pagination">
                           <%= will_paginate @project rescue nil  %>
                         </div> 
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
<script src="/assets/public/viewProjects.js"  type="text/javascript" />
</script>     
