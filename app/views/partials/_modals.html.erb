<!-- Deposit in  Account Modal -->
<div role="dialog" class="modal" id="smart-modal-deposit-account" data-backdrop="static">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            <h4 class="modal-title">Deposit Fund</h4>
         </div>
         <div class="modal-body">
            <form id="deposit_fund_form" role="form" action="/account_histories" method="post">
               <div class="row">
                  <div class="col-sm-12">
                   <div class="form-group prepend-icon">
                        <label for="Buy Share">Deposit Name</label>
                        <input id="grant_name" class="form-control" type="text" placeholder="Deposit Name" name="grant" required="true">
                        <span class="field-icon "><i class="icon-user"></i></span> 
                     </div>
                      <div class="form-group prepend-icon">
                        <label for="Buy Share">Date</label>
                        <input id="date" class="form-control" type="date" placeholder="Date" name="date" required="true">
                        <span class="field-icon "><i class="icon-calendar"></i></span> 
                     </div>
                      <div class="form-group prepend-icon">
                        <label for="Buy Share">Account</label>
                        <select class="form-control" id="account" name="account">
                        <option value="">Select Source</option>
                        <option value="Bank of AmericaXXX3">Bank of AmericaXXX3</option>
                        </select>
                        <span class="field-icon "><i class="icon-file"></i></span> 
                     </div>
                     <div class="form-group prepend-icon">
                        <label for="Buy Share">Market</label>
                        <input id="market" class="form-control" type="text" placeholder="Market" name="market" required="true">
                        <span class="field-icon "><i class="icon-archive"></i></span> 
                     </div>
                     <div class="form-group prepend-icon">
                        <label for="Buy Share">Deposit Amount</label>
                        <input id="deposit_amount" class="form-control" type="number" placeholder="Deposit Amount" name="amount" min="1" max="1000000" required="true">
                        <span class="field-icon "><i class="icon-credit-card"></i></span> 
                     </div>
                     <div class="form-group">
                        <button class="btn btn-primary btn-shadow btn-block "><i class="icon-chevron-sign-up"></i>  Submit </button>
                     </div>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>


